{
  "manifest_version": 3,
  "name": "React Carbon New Tab",
  "description": "새 탭 페이지를 대체하는 React 및 Carbon Design System 기반 Chrome 확장 프로그램입니다.",
  "version": "1.0",
  "chrome_url_overrides": {
    "newtab": "newtab.html" 
  },
  "icons": {
    "16": "favicon/Icon_16.png",
    "48": "favicon/Icon_48.png",
    "128": "favicon/Icon_128.png"
  },
  "permissions": [
    "history",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*.png","favicon/*"],
      "matches": ["<all_urls>"]
    }
  ]
}